<% layout('layouts/boilerplate') %>

<div class="row align-items-center justify-content-center">
    <div class="col-6 align-items-center justify-content-center">



        <div class="card">

            <div class="card-body">
                <h5 class="card-title">Name: <%= user.name%></h5>
                <p class="card-text">User Name: <%= user.user_name%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">User ID: <%= user.sys_id %></li>
                <li class="list-group-item text-muted">Location: </li>

            </ul>
            <div class="card-body">
                <a href="/users/" class="card-link btn btn-primary">All Users</a>

                <!-- NEEDS TO BE DELETED -->


                <!-- <h5>user owns this post</h5> -->
                <a href="/users/edit/<%= user.sys_id%>" class="card-link btn btn-warning">Edit</a>
                <form class="card-link ml-5 pl-5 d-inline" action="/campgrounds//?_method=DELETE" method="post">
                    <button class="card-link btn btn-danger d-inline">Delete</button>
                </form>



            </div>
            <div class=" card-footer text-muted ">
                Last updated by: <%= user.sys_updated_by%><br>
                On: <%= user.sys_updated_on%> <br><br>
                Created By: <%= user.sys_created_by%><br>
                On: <%= user.sys_created_on %>
            </div>
        </div>
    </div>


</div>