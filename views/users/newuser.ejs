<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <h1 class="text-center">New User</h1>
        <!-- <form action="/campgrounds" method="post" novalidate class="validated-form"> -->
        <form action="/users" method="post" novalidate class="validated-form">

            <div class="mb-3">
                <label class="form-label" for="title">User Name:</label>
                <input class="form-control" type="text" name="user[user_name]" id="title" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
                <div class="invalid-feedback">
                    Please enter a name!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Password:</label>
                <input class="form-control" type="text" name="user[user_password]" id="location" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
                <div class="invalid-feedback">
                    Please enter a Location
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Phone:</label>
                <input class="form-control" type="text" name="user[phone]" id="location" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
                <div class="invalid-feedback">
                    Please enter a Location
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Email:</label>
                <input class="form-control" type="text" name="user[email]" id="location" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
                <div class="invalid-feedback">
                    Please enter a Location
                </div>
            </div>


            <div class="mb-3">
                <button class="btn btn-success mb-3" type="submit">Add User</button>
            </div>

        </form>

        <a class="btn btn-primary" href="/users/">Back to All Users</a>
    </div>
</div>

<script src="/js/validateForms.js"></script>