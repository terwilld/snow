<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <h1 class="text-center">Add GPX Data for Device: <%= uniqueID%></h1>
        <!-- <form action="/campgrounds" method="post" novalidate class="validated-form"> -->
        <form action="/traccar/addgpxdata" method="post" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Latitude:</label>
                <input class="form-control" type="text" name="gpxdata[latitude]" id="title" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
                <div class="invalid-feedback">
                    Please enter a Latitude!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Longitude:</label>
                <input class="form-control" type="text" name="gpxdata[longitude]" id="location" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
                <div class="invalid-feedback">
                    Please enter a Longitude
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">uniqueid:</label>
                <input class="form-control" type="hidden" name="gpxdata[uniqueid]" id="location" required
                    value=<%= uniqueID%>>
                <div class="valid-feedback">
                    Looks Good!
                </div>
                <div class="invalid-feedback">
                    Please enter a Longitude
                </div>
            </div>



            <div class="mb-3">
                <button class="btn btn-success mb-3" type="submit">Add Device GPX Data</button>
            </div>

        </form>

        <a class="btn btn-primary" href="/traccar/">Back to All Devices</a>
    </div>
</div>

<script src="/js/validateForms.js"></script>