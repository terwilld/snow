<% layout('layouts/boilerplate') %>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="/css/users/users.css" />


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-uppercase mb-0">View Audit Logs</h5>
                    <a class="btn btn-success" href="/audit_logs/new" role="button">New Log</a>
                </div>
                <div class="table-responsive">
                    <table class="table no-wrap user-table mb-0">
                        <thead>
                            <tr>
                                <th scope="col" class="border-0 text-uppercase font-medium pl-4">#</th>
                                <th scope="col" class="border-0 text-uppercase font-medium">DB User Name</th>
                                <th scope="col" class="border-0 text-uppercase font-medium">Object</th>
                                <th scope="col" class="border-0 text-uppercase font-medium">Verb</th>
                                <th scope="col" class="border-0 text-uppercase font-medium">Server IP</th>
                                <th scope="col" class="border-0 text-uppercase font-medium">Full Sql</th>
                            </tr>
                        </thead>
                        <tbody>

                            <%  for (let record = 0; record< auditLogs.length; record++) { %>
                            <tr>
                                <td class="pl-4"><%=record%></td>

                                <td>
                                    <h5 class="font-medium mb-0"><%=auditLogs[record].dbusername %></h5>
                                </td>
                                <td>
                                    <span class="text-muted"><%=auditLogs[record].object %></span>
                                </td>

                                <td>
                                    <span class="text-muted"><%= auditLogs[record].verb %></span>
                                </td>

                                <td>
                                    <span class="text-muted"><%= auditLogs[record].serverIP%></span>
                                </td>

                                <td>
                                    <span class="text-muted"><%= auditLogs[record].sql%></span>
                                </td>

                                <td>

                                    <button onclick="window.location='/audit_logs/get/<%=auditLogs[record]._id%>';"
                                        type="button" class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2"><i
                                            class="fa fa-edit"></i>
                                    </button>
                                    <button onclick="window.location='/audit_logs/delete/<%=auditLogs[record]._id%>';"
                                        type="button" id="<%=auditLogs[record]._id%>"
                                        class="cd-popup-trigger btn btn-outline-info btn-circle btn-lg btn-circle ml-2"><i
                                            class="fa fa-trash"></i> </button>


                                </td>
                            </tr>
                            <% }%>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>